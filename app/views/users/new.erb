<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <br>
            <br>
            <br>

            <h1>Signup</h1>
            

            <% if flash[:alert] %>
                <% flash[:alert].each do |message| %>
                <div class="alert alert-danger" role="alert">
                    <%= message %>
                    <br>
                </div>
                <% end %>
            <% end %>
            
            <form method="POST" action="/signup">
                <label for="firstname">Please enter your firstname:</label>
                <br>
                <input type="text" name="firstname" id="firstname" placeholder="Firstname:">
                <br>
                <label for="lastname">Please enter your lastname:</label>
                <br>
                <input type="text" name="lastname" id="lastname" placeholder="Lastname:">
                <br>
                <label for="username">Please choose a Username:</label>
                <br>
                <input type="text" name="username" id="username" placeholder="Username:">
                <br>
                <label for="email">Enter your Email:</label>
                <br>
                <input type="email" name="email" id="email" placeholder="Email:">
                <br>
                <br>
                <label for="password">Choose a Password(must be 5 character long):</label>
                <br>
                <input type="password" name="password" id="password" placeholder="Password:">
                <br>
                <br>
                <input class="btn btn-success" type="submit" value="Submit">
            </form>
        </div>
    </div>
</div>