
<!-- Carousel -->

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <div class="carousel-inner">
                        <div class="carousel-item active" data-interval="4000">
                                <img src="img/perry-grone-1.jpg" class="d-block w-100" alt="image-1">
                        </div>
                        <div class="carousel-item" data-interval="4000">
                                <img src="img/change-4.jpg" class="d-block w-100" alt="image-2">
                        </div>
                        <div class="carousel-item" data-interval="4000">
                                <img src="img/children-3.jpg" class="d-block w-100" alt="image-3">
                        </div>
                </div>
                
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span></a>
                    <a class="right carousel-control"href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right">
                        </span>
                    </a>
            </div>

            <div class="main-text">
                <div class="col-md-12 text-center">
                    <h1>Free Fundraising for the people and the causes we care about</h1>
                    <h3>Starting is easy. 0% platform fee</h3>
                    <% if logged_in? %>
                        <a href="/campaigns/new" class="btn btn-primary">Start a ComeFundUs</a>
                    <% else %>
                        <a href="/login" class="btn btn-primary">Start a ComeFundUs Campaign</a>
                    <% end %>
                </div>
            </div>
        </div>
    </div>


<!--Welcome Section-->
<div class="container-fluid padding">
        <div class="row welcome text-center">
                <div class="col-12">
                <h1 class="display-4 strong">Welcome to ComeFundUs!</h1>
                </div>
        </div>
</div>

<!--  Jumbotron  -->
<div class="container-fluid">
        <div class="row jumbotron">
                <div class="col-xs-12 col sm-12 col-md-9 col-lg-9 col-xl-10">
                        <p class="lead"> The purpose of the site is to give you all the tools so you can share your story with the world. Are you ready to make a change?
                        </p>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 col-xl-2">
                        <a href="campaigns/new"><button type="button" class="btn btn-outline-secondary btn-md">
                        Create a Fundraising Campaign
                        </button></a>
                </div>
        </div>
</div>

<div class="container-fluid padding">
        <div class="row text-center">
        <div class="col-12">
        <h1>Featured Campaign<h1>
        </div>
        </div>              
</div>

<!--Featured Campaign -->

        <div class="container-fluid padding">
        <div class="row padding">
            <div class="col-lg-6">
                <h2><%=@featured_campaign.title%></h2>
                <br>
                <p><%=@featured_campaign.description%></p>
            </div>
            <div class="col-lg-6">
                <p><h4>$<%=@featured_campaign.donations.sum(&:amount)%> Raised of $<%=@featured_campaign.goal_amount%> Goal</h4>
                <div class="progress">
                <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: 25%" aria-valuenow="#{<%=@featured_campaign.donations.sum(&:amount)%>}" aria-valuemin="0" aria-valuemax="#{<%=@featured_campaign.goal_amount%>}">
                </div>
                </div>
                </p>
                <p>
                <%if logged_in? %>
                        <a href="/campaigns/<%=@featured_campaign.id%>" class="btn btn-primary">Donate</a>
                <% else %>
                        <a href="/login" class="btn btn-success">Donate</a>
                <%end%>
                </p>
            </div>
        </div>
        </div>
