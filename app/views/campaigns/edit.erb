<form method="POST" action="/campaigns/<%= @campaign.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label for="Organizer">Oraganized By:</label>
    <%= @campaign.organizer.username%>
    <br>

    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= @campaign.title %>">
    <br>

    <label for="title">Description:</label>
    <input type="text" name="description" value="<%= @campaign.description %>">
    <br>

    <label for="goal_amount">Goal:</label>
    <input type="text" name="goal_amount" value="<%= @campaign.goal_amount %>">
    <br>

    <input type="submit" value="Update">
</form>